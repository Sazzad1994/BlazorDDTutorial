@page "/Servers"

<div class="container-fluid text-center">
    <div class="row w-50">
        @foreach (var city in cities)
        {
           <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@($"_Content/Images/{city}.png")" class="card-img-top" alt="...">
                    <div class="card-body">
                        <button class="btn btn-primary" type="button">@city</button>
                    </div>
                </div>
                
           </div>
        }
    </div>
</div>

<ul>
    @foreach (var server in servers)
    {
        <li>
            @server.ServerName is located in @server.LocatedCity in
            <span style="color:@(server.IsOnline ? "red" : "green")">
                
                @(server.IsOnline ? "offline" : "online") mode
            </span> 
            <a href="/servers/@server.ServerId" class="btn btn-link">Edit</a>
        </li>
    }
</ul>



@code {
    private List<ServerEntity> servers = ServerRepository.GetServerByCity("dhk");
    private List<string> cities = CitiesRepository.GetCities();

}
